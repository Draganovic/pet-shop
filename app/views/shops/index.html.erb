<h1>All Pet Shops</h1>

<%= link_to "Login", login_path %>
<%= link_to "Create Account", new_user_path %>

<% @shops.each do |shop| %>
  <h2><%= shop.name %></h2>
  <ul>
  <li><%= "Average Puppy price $#{shop.average_price}" %></li>
  <li><%= link_to shop.name, shop_path(shop)%></li>
</ul>
<% end %>
